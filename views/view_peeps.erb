<form id="new-peep" class="floating-box clearfix" action="/peep" method="post">
  <div class="form-group">
    <small class="form-text text-muted">Peep your guts out!</small>
    <textarea type="text" class="form-control" name="peep_content" value="" placeholder="What's up?"></textarea>
  </div>
  <input type="submit" class="btn btn-primary" value="Peep it">
</form>

<% @peeps.each do |peep| %>
  <div class="peep floating-box">
    <blockquote class="blockquote peep_content">
      <%= peep.content %>
      <footer class="datestamp blockquote-footer">
        <%= peep.created_at.strftime('%F %H:%M%P') %>
      </footer>
    </blockquote>
  </div>
<% end %>
